{
  "name": "ng-lift",
  "version": "0.2.1",
  "main": "dist/index.js",
  "repository": "https://github.com/urish/ng-lift",
  "author": "Uri Shaked <uri@urishaked.com>",
  "license": "MIT",
  "bin": {
    "ng-lift": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "lint": "tslint -p .",
    "test": "npm run lint && jest",
    "test:ci": "npm run lint && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "commander": "^8.1.0",
    "parse5": "^6.0.1",
    "ts-emitter": "^0.4.0",
    "typescript": "^4.3.5",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/jest": "^26.0.24",
    "@types/parse5": "^6.0.1",
    "@types/update-notifier": "^5.1.0",
    "coveralls": "^3.1.1",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tslint": "^5.20.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "mapCoverage": true
  },
  "engines": {
    "node": ">= 6.4.0"
  }
}
